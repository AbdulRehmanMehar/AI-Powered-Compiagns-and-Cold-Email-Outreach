
# MongoDB connection string
DATABASE_URL=

# LLM Provider: "groq" (recommended) or "openai"
LLM_PROVIDER=groq

# Groq API (RECOMMENDED - faster and cheaper)
# Get key at: https://console.groq.com/keys
GROQ_API_KEY=
# Models: llama-3.3-70b-versatile (best), llama-3.1-8b-instant (high volume)
GROQ_MODEL=llama-3.3-70b-versatile

# OpenAI API (fallback when Groq rate limited)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini

# RocketReach API Key
ROCKETREACH_API_KEY=

# ZOHO_EMAILs and Passwords for multiple accounts (comma-separated)
ZOHO_EMAILS="hello@test.com,info@test.com"
# # Format: password1,password2,password3 (same order as emails)
ZOHO_PASSWORDS="test,test"
# # Optional: Sender names for each account (same order)
ZOHO_SENDER_NAMES="test,test"

# # Rotation strategy: "round-robin" or "random"
EMAIL_ROTATION_STRATEGY="round-robin"
# 
# # Emails per account before rotating (for round-robin)
EMAILS_PER_ACCOUNT=5